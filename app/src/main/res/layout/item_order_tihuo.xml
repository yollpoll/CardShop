<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="172dp"
    android:layout_marginBottom="10dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="编号"
        android:textColor="@color/colorText"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:text="2019-11-11"
        android:textColor="@color/colorText"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_code"
        android:layout_marginTop="10dp"
        android:background="@color/colorLine" />

    <ImageView
        android:id="@+id/iv_card"
        android:layout_width="90dp"
        android:layout_height="54dp"
        android:layout_below="@+id/tv_code"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/tv_card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_card"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/iv_card"
        android:text="移动充值卡"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_card_name"
        android:layout_below="@+id/tv_card_name"
        android:layout_marginTop="13dp"
        android:text="数量:1"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_card"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:text="状态"
        android:textColor="@color/colorPrimary" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/iv_card"
        android:layout_marginTop="20dp"
        android:background="@color/colorLine" />

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:text="手机号"
        android:textColor="@color/colorText"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_all_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        android:text="合计:123"
        android:textSize="12sp" />
</RelativeLayout>
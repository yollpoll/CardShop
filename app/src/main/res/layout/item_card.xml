<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:gravity="center"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/rl_root"
        style="@style/StyleWhiteRipple"
        android:layout_width="345dp"
        android:layout_height="140dp"
        android:background="@mipmap/icon_tongyong"
        android:stateListAnimator="@drawable/coupon_animator">

        <TextView
            android:id="@+id/tv_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="35dp"
            android:text="通用银行"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_card_name"
            android:layout_below="@+id/tv_card_name"
            android:layout_marginTop="33dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:text="****   ****   ****   "
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/tv_card_code"
                android:layout_width="wrap_content"
                android:text=""
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
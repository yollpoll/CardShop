<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="15dp">

        <RelativeLayout
            android:id="@+id/rl_root"
            style="@style/StyleWhiteRipple"
            android:layout_width="345dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@mipmap/icon_tongyong"
            android:stateListAnimator="@drawable/coupon_animator">

            <TextView
                android:id="@+id/tv_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="35dp"
                android:text="通用银行"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_card_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_card_name"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="43dp"
                android:text=""
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        style="@style/WhiteBgRipple"
        android:id="@+id/tv_del_card"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="解除绑定"
        android:textColor="@color/color_red" />
</LinearLayout>
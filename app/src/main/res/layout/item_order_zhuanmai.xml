<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="132dp"
    android:layout_marginBottom="10dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="编号"
        android:textColor="@color/colorText"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:text="232323232"
        android:textColor="@color/colorText" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_code"
        android:layout_marginTop="10dp"
        android:background="@color/colorLine" />

    <ImageView
        android:id="@+id/iv_card"
        android:layout_width="90dp"
        android:layout_height="54dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="59dp" />

    <TextView
        android:id="@+id/tv_card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_card"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/iv_card"
        android:text="移动充值卡"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_zhuanmai_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_card_name"
        android:layout_below="@+id/tv_card_name"
        android:layout_marginTop="15dp"
        android:text="转卖价"
        android:textColor="@color/colorText"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_zhuanmai_price"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/tv_zhuanmai_price"
        android:text="转卖数量"
        android:textColor="@color/colorText"
        android:textSize="12sp" />
</RelativeLayout>